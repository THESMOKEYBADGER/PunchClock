<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="382dp"
        android:layout_height="98dp"
        android:background="@drawable/top_rounded_corners"
        android:backgroundTint="@color/theyellow"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/categoryItemBackground"
        android:layout_width="372dp"
        android:layout_height="88dp"
        android:background="@drawable/top_rounded_corners"
        android:backgroundTint="@color/thewhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_entry_title"
        android:layout_width="188dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Entry Title"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@id/categoryItemBackground"
        app:layout_constraintTop_toTopOf="@id/categoryItemBackground" />

    <ImageView
        android:id="@+id/categoryCircle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/categoryItemBackground"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toEndOf="@+id/time_entry_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306" />

    <TextView
        android:id="@+id/time_entry_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="Duration"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/categoryItemBackground"
        app:layout_constraintStart_toStartOf="@id/categoryItemBackground" />

    <Button
        android:id="@+id/itemDel"
        android:layout_width="59dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/top_rounded_corners"
        android:backgroundTint="@color/thered"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/categoryItemBackground"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.731" />


</androidx.constraintlayout.widget.ConstraintLayout>
