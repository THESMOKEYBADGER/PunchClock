<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="382dp"
        android:layout_height="98dp"
        android:background="@drawable/top_rounded_corners"
        android:backgroundTint="@color/theyellow"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/categoryItemBackground"
        android:layout_width="372dp"
        android:layout_height="88dp"
        android:background="@drawable/top_rounded_corners"
        android:backgroundTint="@color/thewhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466" />

    <TextView
        android:id="@+id/categoryNameText"
        android:layout_width="188dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Category Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/categoryItemBackground"
        app:layout_constraintTop_toTopOf="@id/categoryItemBackground" />

    <ImageView
        android:id="@+id/colorPreview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="12dp"

        app:layout_constraintBottom_toBottomOf="@id/categoryItemBackground"
        app:layout_constraintStart_toEndOf="@id/categoryNameText"
        app:layout_constraintTop_toTopOf="@id/categoryItemBackground"
        app:layout_constraintVertical_bias="0.065" />


    <TextView
        android:id="@+id/timeGoalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Time Goal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/categoryItemBackground"
        app:layout_constraintStart_toStartOf="@id/categoryItemBackground"
        app:layout_constraintTop_toBottomOf="@id/categoryNameText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/catDelete"
        android:layout_width="59dp"
        android:layout_height="25dp"
        android:background="@drawable/top_rounded_corners"
        android:backgroundTint="@color/thered"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/categoryItemBackground"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toEndOf="@+id/timeGoalText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.731" />
</androidx.constraintlayout.widget.ConstraintLayout>
